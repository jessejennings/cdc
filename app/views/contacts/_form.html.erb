<%= form_for contact do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your name' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'Enter your email' %>
  </div>
  <div class="form-group">
    <%= f.label :subject %>
    <%= f.select :subject, @requests, class: 'form-control', placeholder: 'Enter topic name' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body,rows: 8, class: 'form-control', placeholder: 'Enter topic description' %>
  </div>
  <%= f.submit "Save", class: 'btn btn-success' %>
<%end%>